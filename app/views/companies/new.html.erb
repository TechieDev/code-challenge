<div class="col-md-12">
  <%= form_for @company do |f| %>
     <% if @company.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button aria-hidden="true" class="close" data-dismiss="alert" type="button">&times;</button>
          <h4><%= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:" %></h4>
          <ul>
            <% @company.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>
  <div class="card my-4">
    <h5 class="card-header">Create A New Company</h5>
    <br>
      <div class="form-group col-md-12">
        <label for="formGroupExampleInput"><%= f.label :name, "Company Name" %>:</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-12">
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputCity"><%= f.label :city %>:</label>
            <%= f.text_field :city, class: "form-control" %>
          </div>
          <div class="form-group col-md-3">
            <label for="inputState"><%= f.label :state %>:</label>
            <%= f.text_field :state, class: "form-control" %>
          </div>
          <div class="form-group col-md-4">
            <label for="inputState"><%= f.label :founded_date %>:</label>
            <div class="input-group">
              <%= f.text_field :founded_date, class: "form-control datepicker" %>
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group col-md-12">
        <label for="exampleFormControlTextarea1"><%= f.label :description %>:</label>
        <%= f.text_area :description, class: "form-control", rows: "3" %>
      </div>
      <div class="form-group col-md-12" align="right">
        <div class="col-sm-12">
          <%= f.submit 'Create Company', class: "btn btn-secondary" %>
        </div>
      </div>
   </div>
 <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>